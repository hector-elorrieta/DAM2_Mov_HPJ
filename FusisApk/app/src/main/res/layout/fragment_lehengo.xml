<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="@color/black"
    android:backgroundTintMode="add"
    tools:context=".LehengoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:backgroundTint="#FFFFFF">

        <Button
            android:id="@+id/buttonjarraitu"
            android:layout_width="174dp"
            android:layout_height="49dp"
            android:layout_marginStart="123dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="123dp"
            android:layout_marginBottom="167dp"
            android:backgroundTint="#2196F3"
            android:text="@string/jarraitu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textOngiEtorri" />

        <TextView
            android:id="@+id/textOngiEtorri"
            android:layout_width="234dp"
            android:layout_height="56dp"
            android:layout_marginStart="95dp"
            android:layout_marginEnd="95dp"
            android:gravity="center"
            android:text="@string/etorri"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="411dp"
            android:layout_height="395dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/fusistransparente" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>