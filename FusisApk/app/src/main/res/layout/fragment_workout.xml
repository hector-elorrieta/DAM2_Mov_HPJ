<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D2D2D"
    android:backgroundTint="#2D2D2D"
    android:backgroundTintMode="add"
    tools:context=".fragments.WorkoutFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="412dp"
            android:layout_height="122dp"
            android:layout_marginTop="235dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/logoblancotransparente"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnTrainerWorkout"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textWorkOut"
            style="@android:style/Widget.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:breakStrategy="high_quality"
            android:text="@string/workout"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/frameLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.069"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textWorkErabiltzaile"
            style="@android:style/Widget.TextView"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="77dp"
            android:layout_marginBottom="12dp"
            android:breakStrategy="high_quality"
            android:gravity="center"
            android:text="@string/textErabiltzailea"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/textWorkMaila"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardViewProfila" />

        <TextView
            android:id="@+id/textWorkMaila"
            style="@android:style/Widget.TextView"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="75dp"
            android:breakStrategy="high_quality"
            android:text="@string/maila"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/btnHistorikoa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textWorkErabiltzaile" />

        <Button
            android:id="@+id/btnHistorikoa"
            android:layout_width="336dp"
            android:layout_height="58dp"
            android:layout_marginBottom="28dp"
            android:backgroundTint="#2196F3"
            android:text="@string/historiala"
            android:textColor="@color/buttonText"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/btnTrainerWorkout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnTrainerWorkout"
            android:layout_width="336dp"
            android:layout_height="58dp"
            android:layout_marginTop="28dp"
            android:backgroundTint="#2196F3"
            android:textColor="@color/buttonText"
            android:text="@string/workouts"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnHistorikoa" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewProfila"
            android:layout_width="101dp"
            android:layout_height="103dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="28dp"
            android:clickable="true"
            android:foregroundGravity="center"
            app:cardBackgroundColor="#03A9F4"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="86dp"
                android:layout_height="85dp"
                android:foregroundGravity="center"
                app:cardBackgroundColor="#F4F4F4"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="69dp"
                    android:layout_height="59dp"
                    android:layout_gravity="center"
                    android:src="@drawable/erabiltzaile" />

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="207dp"
            android:layout_height="5dp"
            android:layout_marginEnd="58dp"
            android:layout_marginBottom="97dp"
            android:background="#2196F3"
            android:backgroundTint="#2196F3"
            app:layout_constraintBottom_toTopOf="@+id/textWorkErabiltzaile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.123"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textWorkOut"
            app:layout_constraintVertical_bias="1.0">

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>